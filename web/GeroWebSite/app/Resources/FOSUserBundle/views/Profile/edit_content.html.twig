{% trans_default_domain 'FOSUserBundle' %}
<div class="row">

    <div class="span3">
        {% include 'UtilisateursBundle:Default:ModulesUsed/utilisateursCo.html.twig' %}
    </div>

    <div class="span9">
        <h2>Modifier mes informations</h2>

                <div class="span3">
