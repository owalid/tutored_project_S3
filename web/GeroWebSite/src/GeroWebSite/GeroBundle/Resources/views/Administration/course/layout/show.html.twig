{% extends '::layout/layoutAdmin.html.twig' %}
{% block body %}
    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Montantcourse</th>
                <td>{{ course.montantCourse }}</td>
            </tr>
            <tr>
                <th>Datecourse</th>
                <td>{% if course.dateCourse %}{{ course.dateCourse|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('benevole_course_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('benevole_course_edit', { 'id': course.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
