{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="container">
            <div class="row">

                <div class="span3">
                    {% include '::modulesUsed/navigation.html.twig' %}
                </div>
                    <div class="jumbotron jumbotron-billboard">
                        <div class="img"></div>
                        <div class="container">
                            <div class="col-lg-12">
                                <h1>Bonjour Ã  vous !</h1>
